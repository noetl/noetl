{
  "OS_ENV": {
    "HOST": "localhost",
    "ROOT":"~/projects/github",
    "TEMP":"/tmp",
	  "CHA":"CHA"
  },
  "PROJECT": {
    "NAME":"noetl",
    "HOME": "${OS_ENV.ROOT}/noetl",
    "CUST": "noetl"
  },
  "LOGGING": [
    {
      "NAME": "${PROJECT.NAME}",
      "FILE": {
        "NAME": "${PROJECT.NAME}",
        "DIRECTORY": "${OS_ENV.TEMP}/log",
        "EXTENTION": "log",
        "PATTERN": "datetime"
      },
      "MAIL": {
        "SUBJECT": "${PROJECT.NAME}",
        "LIST": "akuksin@gmail.com",
        "CMD": "mail -s "
      }
    }
  ],
  "WORKFLOW": {
    "HOST": "${OS_ENV.HOST}",
    "STAGING":"${OS_ENV.TEMP}",
	"TASKSEP":"-",
    "TEST": {
      "FLAG": "True",
	  "FUNCTIONS":[
			"getTask"
		]
    },
    "URLS": {
    },
    "DIRECTORY": "${PROJECT.HOME}",
    "CURSOR": {
    	"RANGE": [
			{"FROM":"2011-09-01","TO":"2011-12-31","INCREMENT": "1m"}
    	], 
    	"DATEFORMAT": "%Y%m"
    },  
    "TIMESTAMP": "2015-10-11 22:33:44",
	"TASKS": {
		"start" : {
			"DESC": "start: processing for ${PROJECT.NAME} is started", 
			"START": {}, 
			"STEPS": {}, 
			"NEXT": { 
				"SUCCESS": "task1", 
				"FAILURE": "exit" 
			} 
		},
		"task1" : {
			"DESC": "Create and remove a file in the temp directory", 
			"START": {
				"step5":["step1","step2"]},
			"STEPS": { 
				"step1" : {
        			"DESC": "List files in temp",
        			"NEXT": {
          				"SUCCESS": {"0":["step5"]},
          				"FAILURE": {
          					"NEXT_STEP": "exit",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "runShell",
          				"THREAD": "0",
    					"CURSOR": {
    						"RANGE": [
            					"0"
    						], 
    						"DATATYPE": "integer",
    						"FORMAT": "",
    						"INHERIT": "False"
    					},  
          				"EXEC": {
          					"URL": "${WORKFLOW.HOST}",
          					"CMD": [
            					["ls -ltr ${WORKFLOW.STAGING}"],
            					["echo '${PROJECT.HOME}'"]
          					]
          				}
        	 		}
      	  		},
				"step2" : {
        			"DESC": "Create and write to file for each cursor",
        			"NEXT": {
          				"SUCCESS": {"0":["step3"]},
          				"FAILURE": {
          					"NEXT_STEP": "exit",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "runShell",
          				"THREAD": "0",
    					"CURSOR": {
    						"RANGE": [
								{"FROM":"2011-09-01","TO":"2011-12-01","INCREMENT": "1m"},"2016-01-01",{"FROM":"2012-01-01","TO":"2013-02-01","INCREMENT": "1m"},"2015-01-01"
    						], 
    						"DATATYPE": "date",
    						"FORMAT": "%Y-%m-%d",
    						"INHERIT": "False"
    					},  
          				"EXEC": {
          					"URL": "${WORKFLOW.HOST}",
          					"CMD": [
            					["echo \"Cursor [%Y%m]\" > ${WORKFLOW.STAGING}/[%Y%m].test"],
								["cat ${WORKFLOW.STAGING}/[%Y%m].test"]
          					]
          				}
        	 		}
      	  		},
				"step3" : {
        			"DESC": "List cursor file",
        			"NEXT": {
          				"SUCCESS": {"0":["step4"]},
          				"FAILURE": {
          					"NEXT_STEP": "step3a",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "runShell",
          				"THREAD": "0",
    					"CURSOR": {
    						"RANGE": [
								{"FROM":"2011-09-01","TO":"2011-12-31","INCREMENT": "1M"}
    						], 
    						"DATATYPE": "date",
    						"FORMAT": "%Y-%m-%d",
    						"INHERIT": "False"
    					},  
          				"EXEC": {
          					"URL": "${WORKFLOW.HOST}",
          					"CMD": [
            					["ls -ltr ${WORKFLOW.STAGING}/[%Y%m].test"]
          					]
          				}
        	 		}
      	  		},
				"step3a" : {
        			"DESC": "Create missing cursor files",
        			"NEXT": {
          				"SUCCESS": {"0":["exit"]},
          				"FAILURE": {
          					"NEXT_STEP": "exit",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "runShell",
          				"THREAD": "0",
    					"CURSOR": {
    						"RANGE": [
            					"2011-10-01"
    						], 
    						"DATATYPE": "date",
    						"FORMAT": "%Y-%m-%d",
    						"INHERIT": "True"
    					},  
          				"EXEC": {
          					"URL": "${WORKFLOW.HOST}",
          					"CMD": [
            					["echo \"Cursor [%Y%m]\" > ${WORKFLOW.STAGING}/[%Y%m].test"]
          					]
          				}
        	 		}
      	  		},
				"step4" : {
        			"DESC": "Remove all cursor files",
        			"NEXT": {
          				"SUCCESS": {"0":["step5"]},
          				"FAILURE": {
          					"NEXT_STEP": "exit",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "runShell",
          				"THREAD": "0",
    					"CURSOR": {
    						"RANGE": [
								{"FROM":"2011-09-01", "TO":"2011-12-31","INCREMENT": "1M"},"2012-01-01"
    						], 
    						"DATATYPE": "date",
    						"FORMAT": "%Y-%m-%d",
    						"INHERIT": "False"
    					},  
          				"EXEC": {
          					"URL": "${WORKFLOW.HOST}",
          					"CMD": [
            					["rm ${WORKFLOW.STAGING}/[%Y%m].test"]
          					]
          				}
        	 		}
      	  		},
				"step5" : {
        			"DESC": "List the cursor file",
        			"NEXT": {
          				"SUCCESS": {"0":["exit"]},
          				"FAILURE": {
          					"NEXT_STEP": "exit",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "runShell",
          				"THREAD": "0",
    					"CURSOR": {
    						"RANGE": [
            					"2011-12-31"
    						], 
    						"DATATYPE": "date",
    						"FORMAT": "%Y-%m-%d",
    						"INHERIT": "False"
    					},  
          				"EXEC": {
          					"URL": "${WORKFLOW.HOST}",
          					"CMD": [
            					["ls -ltr ${WORKFLOW.STAGING}/[%Y%m].test"]
          					]
          				}
        	 		}
      	  		},
        		"exit" : {
        			"DESC": "Data processing for ${PROJECT.NAME} is finished",
        			"NEXT": {
          				"SUCCESS": {"0":["exit"]},
          				"FAILURE": {
          					"NEXT_STEP": "exit",
   							"MAX_FAILURES": "1",
   							"WAITTIME": "0s"
          				}
        			},
        			"CALL": {
          				"ACTION": "Exit"
        			}
      			}
   			},	
        	"NEXT": {
          		"SUCCESS": "exit",
          		"FAILURE": "exit"
        	}
		},
    	"exit" : {
        	"DESC": "Data processing for ${PROJECT.NAME} is finished",
   			"START": {},
   			"STEPS": {},
        	"NEXT": {
          		"SUCCESS": "",
          		"FAILURE": ""
        	}
		}
  	}
  }
}
