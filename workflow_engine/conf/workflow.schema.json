{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      },
      "required": ["name"]
    },
    "spec": {
      "type": "object",
      "properties": {
        "schedule": {
          "type": "string"
        },
        "variables": {
          "type": "object",
          "properties": {
            "default_timeout": {
              "type": "integer"
            }
          },
          "required": ["default_timeout"]
        },
        "initial_state": {
          "type": "string"
        },
        "transitions": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "runtime": {
                "type": "string"
              },
              "conditions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "tasks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "conditions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "actions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "shell": {
                            "type": "string"
                          },
                          "rest_api": {
                            "type": "object",
                            "properties": {
                              "method": {
                                "type": "string"
                              },
                              "url": {
                                "type": "string"
                              },
                              "query": {
                                "type": "string"
                              }
                            },
                            "required": ["method", "url", "query"]
                          }
                        }
                      }
                    }
                  },
                  "required": ["name", "conditions", "actions"]
                }
              }
            },
            "required": ["name", "runtime", "conditions", "tasks"]
          }
        }
      },
      "required": ["schedule", "variables", "initial_state", "transitions", "conditions", "jobs"]
    }
  },
  "required": ["apiVersion", "kind", "metadata", "spec"]
}
